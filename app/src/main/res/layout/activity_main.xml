<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.niall.braintrainer.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer1"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="answerSelected"
            android:textSize="30dp" />

        <Button
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer2"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="answerSelected"
            android:textSize="30dp"/>

        <Button
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer3"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="answerSelected"
            android:textSize="30dp"/>

        <Button
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer4"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="answerSelected"
            android:textSize="30dp"/>
    </GridLayout>

    <TextView
        android:text="30s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timerText"
        android:textSize="40dp"
        android:background="#f4ff1a" />

    <TextView
        android:text="2/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/scoreText"
        android:textSize="40dp"
        android:background="#ff8a15" />

    <TextView
        android:text="12 + 15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumText"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/scoreText"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Go!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:background="#0ac900"
        android:textSize="120dp"
        android:onClick="startGame"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="64dp" />

    <Button
        android:text="Play Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:id="@+id/playAgainButton"
        android:onClick="playAgain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outcomeText"
        android:textSize="35dp"
        android:layout_above="@+id/playAgainButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

</RelativeLayout>
